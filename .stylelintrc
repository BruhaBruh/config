{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "selector-class-pattern": [
      "^([a-z-]+)(__([a-z-]+))?(_([a-z-]+))?$",
      {
        "message": "Selector class pattern does not match project conventions",
        "resolveNestedSelectors": true
      }
    ]
  }
}
